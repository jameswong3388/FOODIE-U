<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="450.0" stylesheets="@../../styles/styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oodwj_assignment.runProfilePicController">
   <children>
      <Button layoutX="244.0" layoutY="250.0" mnemonicParsing="false" onAction="#uploadButtonClicked" prefHeight="28.0" prefWidth="100.0" text="Upload" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="14.0" />
         </font>
      </Button>
      <Button layoutX="186.0" layoutY="185.0" mnemonicParsing="false" onAction="#browseButtonClicked" prefHeight="28.0" prefWidth="77.0" style="-fx-background-color: grey;" text="Browse" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="14.0" />
         </font>
      </Button>
      <Label layoutX="131.0" layoutY="12.0" text="Upload profile picture">
         <font>
            <Font name="Segoe UI Bold" size="18.0" />
         </font>
      </Label>
      <Button fx:id="backButton" focusTraversable="false" mnemonicParsing="false" onAction="#backButtonClicked" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/back.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <ImageView fitHeight="100.0" fitWidth="94.0" layoutX="178.0" layoutY="58.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/upload.png" />
         </image>
      </ImageView>
      <Label fx:id="pathLabel" alignment="CENTER" layoutX="23.0" layoutY="160.0" prefHeight="18.0" prefWidth="403.0">
         <font>
            <Font name="Segoe UI" size="12.0" />
         </font>
      </Label>
      <Button layoutX="106.0" layoutY="250.0" mnemonicParsing="false" onAction="#cancelButtonClicked" prefHeight="28.0" prefWidth="100.0" text="Cancel" textFill="WHITE">
         <font>
            <Font name="Segoe UI Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
